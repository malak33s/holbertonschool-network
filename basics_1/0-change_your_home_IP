#!/usr/bin/env bash
# This script modifies the IP resolution for localhost and facebook.com

# Change localhost to resolve to 127.0.0.2 (ensure all occurrences are modified)
sudo sed -i 's/^127.0.0.1/127.0.0.2/' /etc/hosts
sudo sed -i 's/^::1/::2/' /etc/hosts  # If there's an IPv6 entry

# Change facebook.com to resolve to 8.8.8.8 (ensure correct resolution)
sudo sed -i '/facebook.com/c\8.8.8.8 facebook.com' /etc/hosts
