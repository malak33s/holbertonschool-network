#!/usr/bin/env bash
# This script modifies the IP resolution for localhost and facebook.com

# Save the current /etc/hosts file to /etc/hosts.backup
cp /etc/hosts /etc/hosts.backup

# Remove entries for localhost from /etc/hosts
sed -i '/localhost/d' /etc/hosts

# Remove entries for facebook from /etc/hosts
sed -i '/facebook\.com/d' /etc/hosts

# Add new entry for localhost resolving to 127.0.0.2
echo "127.0.0.2 localhost" >> /etc/hosts

# Add new entry for facebook resolving to 8.8.8.8
echo "8.8.8.8 facebook.com" >> /etc/hosts
